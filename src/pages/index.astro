---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import LinkButton from "@components/LinkButton.astro";
import Hr from "@components/Hr.astro";
import Card from "@components/Card";
import Socials from "@components/Socials.astro";
import getSortedPosts from "@utils/getSortedPosts";
import { SITE, SOCIALS } from "@config";
import profileImage from "@assets/images/profile_400.jpg";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);

const socialCount = SOCIALS.filter(social => social.active).length;
---

<Layout>
  <Header />
  <main id="main-content">
    <section id="hero">
      <div class="hero-header">
        <div class="profile-image-container">
          <Image
            src={profileImage}
            alt="Parin Pengpun Profile Image â€“ AI researcher and CMU freshman"
            class="profile-image"
            width={400}
            height={400}
            loading="eager"
            decoding="async"
          />
        </div>
        <div class="hero-title">
          <h1>hi, I'm Parin!</h1>
          <a
            target="_blank"
            href="/rss.xml"
            class="rss-link"
            aria-label="rss feed"
            title="RSS Feed"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="rss-icon"
              ><path
                d="M19 20.001C19 11.729 12.271 5 4 5v2c7.168 0 13 5.832 13 13.001h2z"
              ></path><path
                d="M12 20.001h2C14 14.486 9.514 10 4 10v2c4.411 0 8 3.589 8 8.001z"
              ></path><circle cx="6" cy="18" r="2"></circle>
            </svg>
            <span class="sr-only">RSS Feed</span>
          </a>
        </div>
      </div>
      <div class="hero-content">
        <p>
          I'm a freshman at Carnegie Mellon University studying Artificial Intelligence. You may know me from:

          <ul>
            <li>creating <a href="https://opentyphoon.ai/blog/en/typhoon-vision-preview-release-0bdef028ca55">Thailand's first vision-language model</a> while in 11th Grade.</li>
            <li><a href="https://scholar.google.com/citations?user=1gbFjCwAAAAJ&hl=en">research</a> on agents, synthetic data, multimodal LLMs etc.</li>
            <li>competitions and hackathons that I've <a href="/competitions">competed in</a></li>
          </ul>
        </p>
        {
          // only display if at least one social link is enabled
          socialCount > 0 && (
            <div class="social-wrapper">
              <div class="social-links">Social Links:</div>
              <Socials />
            </div>
          )
        }
      </div>
    </section>

    <Hr />

    {
      featuredPosts.length > 0 && (
        <>
          <section id="featured">
            <h2>Featured</h2>
            <ul>
              {featuredPosts.map(({ data, slug }) => (
                <Card
                  href={`/posts/${slug}/`}
                  frontmatter={data}
                  secHeading={false}
                />
              ))}
            </ul>
          </section>
          {recentPosts.length > 0 && <Hr />}
        </>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts">
          <h2>Recent Posts</h2>
          <ul>
            {recentPosts.map(
              ({ data, slug }, index) =>
                index < SITE.postPerIndex && (
                  <Card
                    href={`/posts/${slug}/`}
                    frontmatter={data}
                    secHeading={false}
                  />
                )
            )}
          </ul>
        </section>
      )
    }

    <div class="all-posts-btn-wrapper">
      <LinkButton href="/posts/">
        All Posts
        <svg xmlns="http://www.w3.org/2000/svg"
          ><path
            d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"
          ></path>
        </svg>
      </LinkButton>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  /* ===== Hero Section ===== */
  #hero {
    @apply pb-6 pt-8;
  }
  .hero-header {
    @apply flex flex-col items-center gap-4 sm:flex-row sm:items-center sm:gap-6;
  }
  .profile-image-container {
    @apply flex-shrink-0;
  }
  .profile-image {
    @apply h-32 w-32 rounded-full object-cover 
           ring-4 ring-amber-200/30 
           shadow-lg shadow-amber-200/10
           transition-shadow duration-300
           rotate-12
           hover:ring-amber-200/50 hover:shadow-xl
           sm:h-32 sm:w-32;
  }
  .hero-title {
    @apply flex items-center gap-2;
  }
  #hero h1 {
    @apply inline-block text-3xl font-bold sm:text-4xl;
  }
  #hero .rss-link {
    @apply flex items-center;
  }
  #hero .rss-icon {
    @apply h-6 w-6 scale-110 fill-skin-accent sm:scale-125;
  }
  .hero-content {
    @apply mt-4;
  }
  #hero p {
    @apply my-2;
  }
  .social-wrapper {
    @apply mt-4 flex flex-col sm:flex-row sm:items-center;
  }
  .social-links {
    @apply mb-1 mr-2 whitespace-nowrap sm:mb-0;
  }
  #hero ul {
    @apply list-disc pl-5;
  }

  #hero a {
    @apply text-skin-accent underline decoration-wavy;
  }

  /* ===== Featured & Recent Posts Sections ===== */
  #featured,
  #recent-posts {
    @apply pb-6 pt-12;
  }
  #featured h2,
  #recent-posts h2 {
    @apply text-2xl font-semibold tracking-wide;
  }
  .all-posts-btn-wrapper {
    @apply my-8 text-center;
  }
</style>
