---
import Layout from "@layouts/Layout.astro";
import { SITE, SOCIALS } from "@config";
import Socials from "@components/Socials.astro";
---

<Layout>
  <main class="landing-container">
    <div class="content">
      <h1>Welcome to <span class="author-name">{SITE.author}'s</span> Blog</h1>
      
      <div class="construction-notice">
        <div class="icon-container">
          <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"></path>
          </svg>
        </div>
        
        <div class="message">
          <h2>Site Under Construction</h2>
          <p>
            Thank you for visiting! I'm currently working on my personal website 
            where I'll be sharing research, projects, and thoughts at the intersection 
            of CS, AI, Biology, Philosophy, and more.
          </p>
          <p>Please check back soon for updates!</p>
        </div>
      </div>

      <div class="cta-section">
        <a href="https://github.com/parinzee" class="github-button" target="_blank" rel="noopener noreferrer">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          Visit My GitHub
        </a>
        <a href="/blog" class="blog-button">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
            <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
          </svg>
          View Blog Preview
        </a>
      </div>

      <div class="social-container">
        <h3>Connect With Me:</h3>
        <Socials />
      </div>
    </div>
  </main>
</Layout>

<style>
  .landing-container {
    @apply flex min-h-screen items-center justify-center px-4 py-12;
  }

  .content {
    @apply max-w-3xl rounded-lg p-8 text-center;
    background-color: var(--color-card);
    box-shadow: var(--shadow-sm);
  }

  h1 {
    @apply mb-8 text-4xl font-bold tracking-tight sm:text-5xl 
  }
  .author-name {
    @apply text-4xl font-bold tracking-tight sm:text-5xl bg-gradient-to-r from-green-400 to-blue-500 bg-clip-text text-transparent
  }

  .construction-notice {
    @apply mb-10 flex flex-col items-center justify-center space-y-6 px-4 sm:flex-row sm:space-x-8 sm:space-y-0 sm:px-0;
  }

  .icon-container {
    @apply flex h-16 w-16 shrink-0 items-center justify-center rounded-full sm:h-24 sm:w-24;
    color: var(--color-accent);
  }

  .message {
    @apply text-left sm:max-w-md;
  }

  .message h2 {
    @apply mb-3 text-2xl font-bold;
  }

  .message p {
    @apply mb-3 text-base opacity-90;
  }

  .cta-section {
    @apply mt-8 flex flex-col items-center justify-center space-y-4 sm:flex-row sm:space-x-6 sm:space-y-0;
  }

  .cta-section a {
    @apply flex items-center justify-center rounded-lg px-6 py-3 text-center font-medium transition-all duration-200;
  }

  .cta-section a svg {
    @apply mr-2 h-5 w-5;
  }

  .github-button {
    @apply bg-neutral-800 text-white hover:bg-neutral-700 dark:bg-neutral-700 dark:hover:bg-neutral-600;
  }

  .blog-button {
    @apply border-2 border-skin-accent text-skin-accent hover:bg-skin-accent hover:text-white;
  }

  .social-container {
    @apply mt-10 flex flex-col items-center justify-center;
  }

  .social-container h3 {
    @apply mb-4 text-lg font-semibold;
  }

</style>
